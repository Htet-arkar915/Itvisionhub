<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/close_dialog"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/close"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"/>
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="50dp"
        android:src="@drawable/person"
        android:layout_below="@+id/close_dialog"
        app:civ_border_color="#373737"
        app:civ_border_width="2dp"
        />
    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:text="Htet Arkar Linn"
        android:textColor="@color/black"
        android:layout_below="@+id/profile_image"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/stu_role"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Student"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:layout_below="@+id/user_name"
        android:layout_marginLeft="50dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="5dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#00BCD4"
        android:paddingBottom="30dp"
        android:layout_below="@+id/stu_role">
        <RelativeLayout
            android:id="@+id/n_txt"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            >

            <TextView
                android:layout_width="65dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="Phone  : "
                android:textColor="@color/white"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/phone_num"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:gravity="center_vertical"
                android:text="09770713987"
                android:textColor="@color/white"
                android:textSize="16dp" />

            <ImageView
                android:id="@+id/call_phone"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_gravity="right"
                android:padding="5dp"
                android:src="@drawable/call_phone" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/e_txt"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            >

            <TextView
                android:layout_width="65dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="Email    : "
                android:textColor="@color/white"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/gmail"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:gravity="center_vertical"
                android:text="htetarkar915@gmail.com"
                android:textColor="@color/white"
                android:textSize="16dp" />

            <ImageView
                android:id="@+id/gmail_send"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_gravity="right"
                android:padding="5dp"
                android:src="@drawable/attach_email" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/d_txt"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            >

            <TextView
                android:layout_width="65dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="Degree : "
                android:textColor="@color/white"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/degree"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="50dp"
                android:gravity="center_vertical"
                android:text="Cu Meiktila"
                android:textColor="@color/white"
                android:textSize="16dp" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/c_txt"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            >

            <TextView
                android:layout_width="65dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="Camp   : "
                android:textColor="@color/white"
                android:textSize="16dp" />
            <TextView
                android:id="@+id/camp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="16dp"
                android:gravity="center_vertical"
                android:layout_centerHorizontal="true"
                android:textColor="@color/white"
                android:layout_marginLeft="50dp"
                android:text="Camp 4"/>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>