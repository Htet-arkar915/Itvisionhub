<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        app:cardElevation="2dp"
        app:cardCornerRadius="5dp"
        android:background="@color/white"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <RelativeLayout
            android:id="@+id/layout_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp">
        <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="@color/black"
        android:textSize="18dp"
         />
            <ImageView
                android:id="@+id/edit"
                android:layout_width="25dp"
                android:src="@drawable/edit_black"
                android:layout_height="25dp"
                android:layout_toLeftOf="@+id/delete"
                android:layout_marginRight="15dp"/>
            <ImageView
                android:id="@+id/delete"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/delete"
                android:layout_alignParentEnd="true"/>
        <!--<ImageView
            android:id="@+id/image_camp"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/cover"
            android:layout_below="@+id/name"
            android:visibility="gone"/>-->
            <LinearLayout
                android:id="@+id/image_camp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/name">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/image_camp_recycle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"/>
                <ImageView
                    android:id="@+id/first_img"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:src="@drawable/cover"
                    android:padding="2dp"
                    android:scaleType="centerCrop"
                    android:adjustViewBounds="true"
                    android:background="@drawable/recycle_transparent_bg"/>
                <LinearLayout
                    android:id="@+id/second_img_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/second_img"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:src="@drawable/cover"
                        android:padding="1dp"
                        android:scaleType="centerCrop"
                        android:adjustViewBounds="true"
                        android:background="@drawable/recycle_transparent_bg"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:padding="2dp">

                        <ImageView
                            android:id="@+id/third_img"
                            android:layout_width="match_parent"
                            android:layout_height="98dp"
                            android:adjustViewBounds="true"
                            android:background="@drawable/recycle_transparent_bg"
                            android:scaleType="centerCrop"
                            android:src="@drawable/cover" />
                        <ImageView
                            android:id="@+id/plus"
                            android:background="@drawable/recycle_transparent_bg"
                            android:src="@drawable/add_btn"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:visibility="gone"/>
                    </RelativeLayout>
                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="4dp"
                android:background="#474646"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_below="@id/image_camp"/>
            <TextView
                android:id="@+id/camp_peroid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textSize="18dp"
                android:text="Peroid"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textColor="@color/black"
                android:layout_below="@+id/image_camp"/>
            <TextView
                android:id="@+id/daily_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Time"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_below="@+id/camp_peroid"/>

            <TextView
                android:id="@+id/camp_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/daily_time"
                android:text="Some txt"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:justificationMode="inter_word"
                android:textColor="@color/black"
                android:textSize="16dp" />
            <androidx.cardview.widget.CardView
                android:id="@+id/stu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="10dp"
                app:cardElevation="2dp"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true"
                android:visibility="visible"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/camp_description">

                <Button
                    android:id="@+id/stu_add_remove"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:backgroundTint="@color/white"
                    android:text="Student Proposals"
                    android:textAllCaps="false"
                    android:textColor="@color/black" />
            </androidx.cardview.widget.CardView>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>